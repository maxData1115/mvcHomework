@{
    Layout = null;
}

@using mvcHomework1.Enum
@model List<mvcHomework1.ViewModels.MoneyRecordViewModel>

    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <tr>
                <th>#</th>
                <th>類別</th>
                <th>日期</th>
                <th>金額</th>
            </tr>
            @if (Model != null)
            {
                int i = 1;
                foreach (var modelitem in Model)
                {
                    <tr>
                        <td>@(i++)</td>
                        <td>@ChangeCategoryColor(modelitem.IncomeExpense)</td>
                        <td>@Html.DisplayFor(m=> modelitem.PostTime)</td>
                        <td>@Html.DisplayFor(m=>modelitem.Amount)</td>
                    </tr>
                }
            }
        </table>
    </div>

@helper ChangeCategoryColor(IncomeExpenseEnums category)
{
    if (@category == IncomeExpenseEnums.支出)
    {
        <span style="color: red">@category</span>
    }
    else
    {
        <span style="color: blue">@category</span>
    }
}