@model mvcHomework1.Enum.MyEnum
@{
    ViewBag.Title = "Home Page";
}

<br />
<br />
<br />

<div class="container body-content">

    <div class="well">
        @using (Html.BeginForm("AddRecord","Home", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <div class="form-group">
                @Html.Label("category", "類別",new {@class = "col-sm-2 control-label"})
                <div class="col-sm-10">
                    @Html.EnumDropDownListFor(d=>d.Category,new{@class="form-control"})
                </div>
            </div>
            <div class="form-group">
                @Html.Label("money", "金額", new { @class = "col-sm-2 control-label" })           
                <div class="col-sm-10">
                    @Html.TextBox("money", "",new { @class = "form-control cnotrol-label", placeholder = "金額" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("date", "日期", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBox("date", DateTime.Now, new { @class = "form-control", placeholder = "日期" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("description", "備註", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextArea("description","",new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-8 col-sm-4">
                    <button type="submit" class="btn btn-default">送出</button>
                </div>
            </div>
        }
    </div>

    @Html.Action("IndexChildAction");
</div>