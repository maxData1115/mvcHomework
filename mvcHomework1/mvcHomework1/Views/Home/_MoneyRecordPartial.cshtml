@model mvcHomework1.ViewModels.MoenyRecordViewModel

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <tr>
                <th>#</th>
                <th>類別</th>
                <th>日期</th>
                <th>金額</th>
            </tr>
            @for (int i = 1; i <= 100; i++)
            {
                <tr>
                    <td>@i</td>
                    <td>@Model.IncomeExpense[i-1]</td>
                    <td>@Model.PostTime[i-1].ToString("yyyy-MM-dd")</td>
                    <td>@Model.Amount[i-1].ToString("#,#")</td>
                </tr> 
            }
        </table>
    </div>
</div>